<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="custom_button_blue" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_blue_primary_700</item>
        <item name="background">@drawable/btn_blue_primary_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintHeight_min">40dp</item>
    </style>

    <style name="custom_button_transparent" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_transparent_stroke</item>
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintHeight_min">40dp</item>

    </style>

    <style name="custom_inputEditTextLayout_gray" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_8</item>
        <item name="iconTint">@color/white</item>
        <item name="layout_constraintHeight_min">@dimen/constraintHeight_min</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_8</item>
        <item name="boxBackgroundColor">@color/white_8</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">@dimen/stroke_0</item>
        <item name="boxStrokeWidthFocused">@dimen/stroke_2</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white_91</item>
        <item name="startIconTint">@color/white_91</item>
    </style>

    <style name="custom_searchEditTextLayout_gray" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_8</item>
        <item name="iconTint">@color/white</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_8</item>
        <item name="boxBackgroundColor">@color/search_box</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="layout_constraintHeight_min">@dimen/search_layout_Height_min</item>
        <item name="boxStrokeWidth">@dimen/stroke_0</item>
        <item name="boxStrokeWidthFocused">@dimen/stroke_2</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white_91</item>
        <item name="startIconTint">@color/white_91</item>
    </style>

    <style name="custom_inputEditText_gray" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textAlignment">viewStart</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_image_article">
        <item name="android:layout_marginTop">@dimen/margin_48</item>
        <item name="android:layout_marginBottom">@dimen/margin_48</item>
        <item name="layout_constraintDimensionRatio">@dimen/ratio_100_75</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="custom_textView_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="custom_textView_header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size26</item>
    </style>

    <style name="custom_textView_appBar" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size22</item>
    </style>

    <style name="custom_textView_desc" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size16</item>
    </style>

    <style name="custom_textView_writer" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">@dimen/size12</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
    </style>


    <style name="custom_textView_tag" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_200</item>
        <item name="android:textSize">@dimen/size8</item>
        <item name="android:paddingEnd">@dimen/margin_8</item>
        <item name="android:paddingStart">@dimen/margin_8</item>
        <item name="android:paddingTop">@dimen/margin_4</item>
        <item name="android:paddingBottom">@dimen/margin_4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:background">@drawable/tag_gray</item>
    </style>

    <style name="custom_chip_item" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/top_home_chips_bordercolor_selector</item>
        <item name="chipStrokeWidth">@dimen/stroke_1</item>
    </style>

    <style name="custom_textView_header30">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="custom_bottom_navigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@color/selector_bottom_nav</item>
        <item name="itemIconTint">@color/selector_bottom_nav</item>
    </style>

    <style name="custom_edit_text_title" parent="Widget.AppCompat.EditText">
        <item name="background">@color/transparent100</item>
        <item name="android:background">@color/transparent100</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size22</item>
    </style>

    <style name="custom_edit_text_desc" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/transparent100</item>
        <item name="background">@color/transparent100</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:textSize">@dimen/size16</item>
    </style>

    <style name="custom_textView_Action_snack" parent="Widget.AppCompat.TextView">
        <item name="backgroundColor">@color/transparent100</item>
        <item name="android:background">@color/transparent100</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/blue_400</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>